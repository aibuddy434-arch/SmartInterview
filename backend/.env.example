# ============================================
# AI Interview Avatar System - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# DATABASE (REQUIRED)
# ============================================
# MySQL connection string
# Format: mysql+aiomysql://user:password@host:port/database
DATABASE_URL=mysql+aiomysql://root:your_password@localhost:3306/ai_interview

# ============================================
# SECURITY (REQUIRED)
# ============================================
# JWT secret key - use a strong random string in production
SECRET_KEY=your-super-secret-key-change-in-production

# ============================================
# AI SERVICES (REQUIRED - Get FREE API keys)
# ============================================

# Google AI (Gemini) - For AI decisions and STT
# Get key at: https://aistudio.google.com/
GOOGLE_API_KEY=your_google_api_key
GOOGLE_MODEL_NAME=gemini-2.0-flash

# Groq - Primary AI provider (Very fast, FREE tier)
# Get key at: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key

# OpenRouter - Optional backup AI provider
# Get key at: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_key

# HuggingFace - For fallback transcription
# Get key at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_key

# ============================================
# SERVICE PROVIDERS
# ============================================
# TTS (Text-to-Speech) provider
# Options: edge (recommended, free), coqui, huggingface
TTS_PROVIDER=edge

# Transcription provider
# Options: whisper (local), google, openai
TRANSCRIPTION_PROVIDER=whisper

# ============================================
# SERVER CONFIGURATION
# ============================================
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS - Allowed frontend origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# ============================================
# FILE UPLOADS
# ============================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,mp3,mp4,wav,avi

# ============================================
# OPTIONAL - Redis (for background tasks)
# ============================================
REDIS_URL=redis://localhost:6379/0
